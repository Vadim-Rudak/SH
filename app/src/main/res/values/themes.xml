<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SH" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreen" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_color</item>
        <item name="android:windowBackground">@color/background_activity</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#ECEDF5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#D2D4DD</item>
    </style>

    <style name="Theme.Auth" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#ECEDF5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#D2D4DD</item>
        <!--window animation style-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--alert dialog theme-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.Reg" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#ECEDF5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#D2D4DD</item>
        <!--window animation style-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--alert dialog theme-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Theme.Verification" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_color</item>
        <item name="android:windowBackground">@color/background_activity</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#ECEDF5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#D2D4DD</item>
    </style>

    <style name="small_titel" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="button_gender" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ImageStyle_Corners_Rounded">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ImageStyle_pick_photo">
        <item name="cornerSize">4dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ImageStyleTopMenu">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.Menu" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#ECEDF5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#D2D4DD</item>
        <!--window animation style-->
