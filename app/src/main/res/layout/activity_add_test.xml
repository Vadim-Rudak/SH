<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tests.view.addTest.AddTest">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_test"
        style="@style/CustomToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Добавление теста"
        app:titleTextColor="@color/white" />

    <Button
        android:id="@+id/AddNameTest"
        android:layout_width="369dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_but"
        android:text="@string/window_input_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextTest" />

    <EditText
        android:id="@+id/TextTest"
        android:layout_width="369dp"
        android:layout_height="61dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:maxLength="30"
        android:hint="@string/window_input1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_add_test" />

</androidx.constraintlayout.widget.ConstraintLayout>