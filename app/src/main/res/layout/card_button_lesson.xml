<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_lesson_time_start"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:fontFamily="@font/fvg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:40"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/btn_lesson_time_end"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/fvg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17:25"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/line"
                app:cornerRadius="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_lesson_name"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fvg"
                    android:paddingLeft="8dp"
                    android:text="Name" />

                <TextView
                    android:id="@+id/btn_lesson_num_class"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fvg"
                    android:paddingLeft="8dp"
                    android:text="308" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_lesson_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00FFFFFF"
                android:scaleType="center"
                card_view:srcCompat="@drawable/more_vert" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>